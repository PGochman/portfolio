---
interface Props {
	title: string;
	description: string
}

const { title, description } = Astro.props;
import Header from '@/components/Header.astro';
---

<!doctype html>
<html lang="es">
	<head>
		<meta charset="UTF-8" />
		<meta name="description" content={description} />
		<meta name="viewport" content="width=device-width" />
		<link rel="icon" type="image/svg+xml" href="/favicon.svg" />
		<meta name="generator" content={Astro.generator} />
		<title>{title}</title>
	</head>
	<body>
		<div class="absolute inset-0 -z-10 h-full w-full bg-white [background:radial-gradient(80%_80%_at_50%_10%,#fff_20%,#A2C397_120%)]">
			<Header />
			<slot />
		</div>
	</body>
</html>
<style is:global>
</style>

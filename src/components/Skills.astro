---
import SectionContainer from "./SectionContainer.astro";
import TechBadge from "@/components/TechBadge.astro"
import TECHNOLOGIES from "@/data/techs"

import { getI18N } from "@/i18n";

const {currentLocale} = Astro

const i18n = getI18N({currentLocale})

---

<div>
    <h1 class="lg:text-3xl text-xl text-center flex w-full justify-center">{i18n.SKILLS}</h1>
    <div class="justify-center flex flex-wrap sm:min-w-[540px] my-6">
        {TECHNOLOGIES.map((tech) =>{
            return <TechBadge class="flex-col" ><tech.icon class="size-16 sm:size-24"/> {tech.name}</TechBadge>
        })}
    </div>
</div>
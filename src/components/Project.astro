---
import TechBadge from "./TechBadge.astro";
const {name, description, date, techs, deploy, repository, photo} = Astro.props

const {currentLocale} = Astro
import { getI18N } from "@/src/i18n";
const i18n = getI18N({currentLocale})

import GithubIcon from "@/src/icons/GithubIcon.astro";
import LinkIcon from "@/src/icons/LinkIcon.astro"
import WebIcon from "@/src/icons/WebIcon.astro"
--- 
<p class="text-base lg:text-xl "><strong>{name}</strong></p>
<p class="text-[10px] sm:text-xs">{date}</p>
<div class="mx-2 sm:mx-0">
  <img src={photo} class="rounded shadow-md shadow-my-green-20 my-2" />
</div>
<p class="text-sm lg:text-base text-center sm:text-start ">{description}</p>
<section class="flex flex-wrap justify-center sm:justify-start">
{techs.map((tech: any) => {
    return <TechBadge><tech.icon class="size-6"></tech.icon>{tech.name}</TechBadge>
})}
</section>
<h1 class="flex text-base sm:text-xl xl:text-2xl items-center"><LinkIcon class="size-4 sm:size-6" />{i18n.PROJECT_LINK}</h1>
<div class="flex flex-col sm:flex-row items-center">
    <a href={repository} class="my-1 p-1 sm:mr-10 flex items-center border-[3px] bg-my-green-7 rounded hover:bg-my-green-9 border-my-green-8"><GithubIcon class="size-4 sm:size-6"/>{i18n.PROJECT_REPOSITORY}</a>
    {deploy && <a class="my-1 flex p-1 items-center border-[3px] bg-my-green-7 rounded hover:bg-my-green-9 border-my-green-8" href={deploy}><WebIcon class="size-4 sm:size-6" />{i18n.PROJECT_DEPLOY}</a>}
</div>

<style>
    a {
      height: fit-content;
      width: fit-content;
    }
  </style>
  
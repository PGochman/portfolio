---
import { getI18N } from "@/i18n/index";

const { currentLocale } = Astro;
const i18n = getI18N({ currentLocale });
---
<div class="flex flex-col mx-1 ">
    <h1 class="flex justify-center lg:text-3xl text-xl mt-8 sm:mb-2">{i18n.ABOUT}</h1>
    <p class="flex text-pretty items-center sm:items-start">{i18n.ABOUT_TEXT}</p>
</div>
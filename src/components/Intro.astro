---
import { getI18N } from "@/src/i18n";

const {currentLocale} = Astro
const i18n = getI18N({currentLocale})

import Badge from "@/src/components/Badge.astro"
import SocialBadge from "@/src/components/SocialBadge.astro"
import LinkedinIcon from "@/src/icons/LinkedinIcon.astro";
import GithubIcon from "@/src/icons/GithubIcon.astro";
import MailIcon from "@/src/icons/MailIcon.astro"
import LandingPhoto from "@/public/imagen landing-PhotoRoom.png-PhotoRoom.png"
import profilePhoto from "@/public/Foto de perfil.jpeg"
---

<div class="items-center sm:items-start p-0 m-0 flex flex-col min-w-[220px] sm:max-w-[220px] lg:min-w-[350px] sm:justify-evenly">
    <div class="flex">
        <img class="lg:size-24 size-16 rounded-full" src={profilePhoto.src} />
        <div class="flex flex-col items-center justify-center">
            <p class="lg:text-3xl text-xl text-center flex flex-row">{i18n.INTRO_TITLE}</p>
            <a href="https://www.linkedin.com/in/pedro-gochman/"><Badge class="text-xs lg:text-sm">{i18n.INTRO_WORK}</Badge></a>
        </div>
    </div>

    <div class="flex flex-col items-center sm:items-start text-balance sm:text-wrap ">
        <h2 class="lg:text-xl text-sm"><strong>{i18n.INTRO_1}</strong></h2>
        <p class="lg:text-lg text-sm" >{i18n.INTRO_2}</p>
        <p class="text-sm lg:text-base text-center sm:text-start ">{i18n.INTRO_3}</p>
    </div>

    <nav class="flex flex-wrap justify-center sm:justify-start">
        <SocialBadge href="https://www.linkedin.com/in/pedro-gochman/"><LinkedinIcon class="size-4"/>LinkedIn</SocialBadge>
        <SocialBadge href="https://github.com/PGochman"><GithubIcon class="size-4"/>GitHub</SocialBadge>
        <SocialBadge > <MailIcon/> pedrogoch55@gmail.com</SocialBadge>
    </nav> 
</div>
    
<img class="w-80 sm:flex hidden" src={LandingPhoto.src}></img>